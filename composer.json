{
    "name": "bumax/socket",
    "description": "Simple sockets, websockets, proxy-sockets based on PHP Amp framework",
    "license": "proprietary",
    "authors": [
        {
            "name": "Max Buldovsky",
            "email": "max@buldovsky.ru"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-pcntl": "*",
        "amphp/socket": "^1.1",
        "amphp/http-client": "^4.5",
        "amphp/websocket-server": "^2.0",
        "amphp/websocket-client": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Bumax\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "amphp/phpunit-util": "^2.0"
    }
}
